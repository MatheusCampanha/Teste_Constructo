@model WebApp_Ex_3.Models.Morador

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Morador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id_Morador" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdBichos" class="control-label"></label>
                <input asp-for="QtdBichos" class="form-control" />
                <span asp-validation-for="QtdBichos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id_Familia" class="control-label"></label>
                <select asp-for="Id_Familia" class="form-control" asp-items="ViewBag.Id_Familia"></select>
                <span asp-validation-for="Id_Familia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary text-left" />
                <a asp-action="Index" class="btn btn-secondary text-right">Voltar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
